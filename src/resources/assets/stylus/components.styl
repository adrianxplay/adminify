$red = #c70000

.form-group-danger
  label
    color $red
  input
    border-color $red
  ul
    margin 0
    margin-top 0
    list-style none
    padding 0


.card.card-widget
  max-height 285px
  height 285px

.adminify-error

.adminify-manytomany
  ul
    list-style none
    padding 10px 15px 0 15px

  .adminify-error
    padding 30px 15px 0 15px
    text-align center


.adminify-multiselect
  .list
    border 1px solid #bfbfbf
    height 215px
    max-height 215px
    overflow-y scroll
    .list-element
      text-align center
      padding 0.2em
      cursor pointer
      &:hover
        background-color #d6dbdf
